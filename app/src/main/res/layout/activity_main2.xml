<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.iatfei.spacing.Main2Activity">

    <TextView
        android:id="@+id/textView2"
        android:layout_width="330dp"
        android:layout_height="120dp"
        android:layout_marginTop="15dp"
        android:text="此 爲 本 人 第 一 個 app 作 品 ， 從 功 能 （ 括 號 、 數 字 等 處 理 等 ） ， 效 率 以 致 錯 誤 處 理 都 未 予 完 善 。 還 請 大 家 過 看 源 碼 ， 不 吝 指 教 。\n兩 年 後 ， 本 人  已 完 成 一 個 應 用 程  式 。 重 回 舊 地 ， 用 三 小 時 把 問 題 修 復 。 隔 格 成 爲 本 人 人 生 第 一 個 開 始 ， 第 二 個 完 成 的  app 作 品 。"
        app:layout_constraintTop_toBottomOf="@+id/textView3"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="333dp"
        android:layout_height="39dp"
        android:layout_marginTop="30dp"
        android:text="此 軟 件 ， 爲 她 而 設 。"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="24sp"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="GitHub"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <Button
        android:id="@+id/button4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="39dp"
        android:text="聯 絡"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button2" />

    <Button
        android:id="@+id/button7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="41dp"
        android:text="網 站"
        app:layout_constraintHorizontal_bias="0.099"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button4" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="200dp"
        android:layout_height="18dp"
        android:layout_marginLeft="29dp"
        android:text="若 有 賜 教 ， 必 洗 耳 恭 聽 。"
        app:layout_constraintLeft_toRightOf="@+id/button4"
        android:layout_marginTop="70dp"
        app:layout_constraintTop_toBottomOf="@+id/textView5" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="173dp"
        android:layout_height="19dp"
        android:layout_marginLeft="29dp"
        android:text="光 臨 fei0 網 站 。"
        app:layout_constraintLeft_toRightOf="@+id/button7"
        android:layout_marginTop="68dp"
        app:layout_constraintTop_toBottomOf="@+id/textView4" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="173dp"
        android:layout_height="19dp"
        android:layout_marginLeft="29dp"
        android:text="在 GitHub 上 復 刻 源 碼 。"
        app:layout_constraintLeft_toRightOf="@+id/button2"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="Proudly Made by Fei Kuan."
        app:layout_constraintBottom_toTopOf="@+id/textView8"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:text="ver. 0.9.0"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>
